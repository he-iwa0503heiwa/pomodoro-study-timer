<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2><%= @user.nickname.present? ? @user.nickname : @user.email %> のプロフィール</h2>
        </div>
        <div class="card-body">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "img-thumbnail mb-3", style: "max-width: 200px;" %>
          <% end %>
          
          <p><strong>メールアドレス:</strong> <%= @user.email %></p>
          
          <% if @user.nickname.present? %>
            <p><strong>ニックネーム:</strong> <%= @user.nickname %></p>
          <% end %>
          
          <% if @user.bio.present? %>
            <div class="mt-3">
              <h5>自己紹介</h5>
              <p><%= @user.bio %></p>
            </div>
          <% end %>
          
          <% if @user.daily_goal.present? %>
            <p><strong>1日の目標学習時間:</strong> <%= @user.daily_goal %> 分</p>
          <% end %>
          
          <% if current_user == @user %>
            <%= link_to "プロフィールを編集", edit_profile_path(@user), class: "btn btn-primary mt-3" %>
          <% end %>
          <%= link_to "トップページに戻る", root_path, class: "btn btn-secondary mt-3 ms-2" %>
        </div>
      </div>
    </div>
  </div>
</div>
